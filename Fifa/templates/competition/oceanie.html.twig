{% extends 'base.html.twig' %}

{% block title %}Competition - CON{% endblock %}

{% block body %}
<style>
    p{
        font-weight: bold;
        font-size: 50px;
    }
</style>
<h1 class="title is-1" style="text-align: center; margin-bottom: 50px;">Coupe d'oc√©anie</h1>
<h3 class="title is-3" style="text-align: center;">Final</h3>

<form action="" method="post">
<button class="button is-primary" style="cursor: pointer; margin-bottom: 150px;" type="submit" name="submit">Simuler</button>
</form>

{% if game != "" %}
<div style="border: 2px solid rgb(243, 243, 243); box-shadow: 10px 5px 5px black;">
<div style="width: 100%; display: flex; justify-content: space-around;">
    <p>{{game[0].name}}</p>
    <p>{{game[1]}}</p>
    <p>-</p>
    <p>{{game[2]}}</p>
    <p>{{game[3].name}}</p>
</div>
<h3 class="title is-3" style="text-align: center;">{{game[4]}}</h3>
</div>

{% endif %}
{% endblock %}
